---
interface Props {
  question: string;
  answer: string;
  index: number;
}

const { question, answer, index } = Astro.props;
---

<div 
  class="reveal faq-item group bg-surface border border-border rounded-2xl overflow-hidden transition-all duration-300 hover:border-primary/40"
  style={`transition-delay: ${index * 0.1}s;`}
>
  <button class="faq-trigger w-full flex items-center justify-between p-6 cursor-pointer font-bold text-lg text-white text-left outline-none">
    {question}
    <span class="faq-icon text-primary text-2xl transition-transform duration-300">+</span>
  </button>
  <div class="faq-content max-h-0 overflow-hidden transition-[max-height] duration-300 ease-in-out">
    <div class="px-6 pb-6 text-text-muted border-l-2 border-primary ml-6 mb-6">
      <p>{answer}</p>
    </div>
  </div>
</div>