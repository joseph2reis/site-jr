---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Header from "../components/layouts/Header.astro";
import Footer from "../components/layouts/Footer.astro";


import "../styles/global.css";
---

<!doctype html>
<html lang="pt-br" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Meu portfólio de desenvolvimento web. Exibindo meus projetos e habilidades." />
    <meta name="keywords" content="desenvolvimento web, portfólio, astro, tailwind css, programador, freelancer" />
    <meta name="author" content="Joseph" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Meu portfólio de desenvolvimento web. Exibindo meus projetos e habilidades." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content={new URL('hero-capa.webp', Astro.url)} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;900&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/2ad4accc32.js"
      crossorigin="anonymous"></script>
  </head>
  <body class="bg-bg text-gray-200 font-sans selection:bg-indigo-500/30">
    <Header />
    <slot />
    <Footer />
  </body>

  <script>
    import { initScrollReveal } from "../scripts/reveal";

    initScrollReveal();

    document.addEventListener("astro:after-swap", initScrollReveal);

    import { initParallax } from "../scripts/parallax";
    initParallax();
    document.addEventListener("astro:after-swap", initParallax);
  </script>
</html>
