---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Header from "../components/layouts/Header.astro";
import Footer from "../components/layouts/Footer.astro";


import "../styles/global.css";
---

<!doctype html>
<html lang="pt-br" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;900&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/2ad4accc32.js"
      crossorigin="anonymous"></script>
  </head>
  <body class="bg-bg text-gray-200 font-sans selection:bg-indigo-500/30">
    <Header />
    <slot />
    <Footer />
  </body>

  <script>
    import { initScrollReveal } from "../scripts/reveal";

    initScrollReveal();

    document.addEventListener("astro:after-swap", initScrollReveal);

    import { initParallax } from "../scripts/parallax";
    initParallax();
    document.addEventListener("astro:after-swap", initParallax);
  </script>
</html>
